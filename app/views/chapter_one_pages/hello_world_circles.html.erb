<h2 id="162">1.6.2 Hello World with circles</h2>

<p><strong>Result:</strong></p>
<div id="vizcontainer">
  <svg style="width:500px;height:500px;border:1px lightgray solid;" />
</div>

<%= javascript_tag do %>
  d3.select("svg")
    .append("line")
    .attr("x1", 20)
    .attr("y1", 20)
    .attr("x2", 400)
    .attr("y2", 400)
    .style("stroke", "black")
    .style("stroke-width", "2px");

  d3.select("svg")
    .append("text")
    .attr("x", 20)
    .attr("y", 20)
    .text("HELLO");

  d3.select("svg")
    .append("circle")
    .attr("r", 20)
    .attr("cx", 20)
    .attr("cy", 20)
    .style("fill", "red");

  d3.select("svg")
    .append("circle")
    .attr("r", 100)
    .attr("cx", 400)
    .attr("cy", 400)
    .style("fill", "lightblue");

  d3.select("svg")
    .append("text")
    .attr("x", 400)
    .attr("y", 400)
    .text("WORLD");
<% end %>
